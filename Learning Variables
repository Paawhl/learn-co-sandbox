//declaring a variable
var word

//assign a value to the variable
word = 'bird'

console.log(word) //'bird'

//assign another value to the variable
word = 'dog'

console.log(word) //'dog'

window.word

//multi-line variable assignment

var a = 5
var b = 2
var c = 3
var d = 'hello'
var e = 'goodbye'

//  to

var a = 5,
    b = 2,
    c = 3,
    d = 'hello',
    e = 'goodbye';
    
// can also be written assignment

var a = 5, b = 2, c = 3, d = 'hello', d = 'goodbye'

